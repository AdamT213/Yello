{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["react", "graphql"],
  "rules": {
    "prefer-const": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-destructuring": "warn",
    "prefer-promise-reject-errors": "error",
    "arrow-parens": ["error", "as-needed"],
    "no-console": "off"
  }
}
